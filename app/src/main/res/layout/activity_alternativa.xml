<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".input.Alternativa"
    android:background="#1a237e">

    <ScrollView
        android:id="@+id/alternativa_scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/alternativa_btn"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/alternativa_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>
    <LinearLayout
        android:id="@+id/alternativa_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="0dp"
            android:text="AÃ±adir Alternativas"
            android:textSize="28sp" />

        <ImageView
            android:layout_width="69dp"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/add"
            android:tint="@color/colorPrimary"/>

    </LinearLayout>
</RelativeLayout>